---
/* WorksEverywhere â€” App compatibility strip showing where QuickSay types */

const apps = [
  { name: 'VS Code', icon: 'code' },
  { name: 'Google Docs', icon: 'file-text' },
  { name: 'Microsoft Word', icon: 'file' },
  { name: 'Slack', icon: 'message' },
  { name: 'Teams', icon: 'users' },
  { name: 'Notion', icon: 'layout' },
  { name: 'Outlook', icon: 'mail' },
  { name: 'Chrome', icon: 'globe' },
];
---

<section class="py-16 md:py-20 px-6">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="fade-in-up font-headline font-semibold text-2xl md:text-3xl text-text-primary mb-3">
      Works everywhere you type.
    </h2>
    <p class="fade-in-up text-text-secondary text-sm mb-10 max-w-lg mx-auto">
      If you can type there, you can dictate there. QuickSay pastes into any text field on Windows.
    </p>

    <div class="fade-in-up flex flex-wrap items-center justify-center gap-6 md:gap-10">
      {apps.map((app) => (
        <div class="flex flex-col items-center gap-2 opacity-70 hover:opacity-100 transition-opacity duration-200">
          <div class="w-10 h-10 rounded-lg bg-surface border border-border flex items-center justify-center text-text-secondary">
            {app.icon === 'code' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="16 18 22 12 16 6" />
                <polyline points="8 6 2 12 8 18" />
              </svg>
            )}
            {app.icon === 'file-text' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                <polyline points="14 2 14 8 20 8" />
                <line x1="16" y1="13" x2="8" y2="13" />
                <line x1="16" y1="17" x2="8" y2="17" />
              </svg>
            )}
            {app.icon === 'file' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                <polyline points="14 2 14 8 20 8" />
              </svg>
            )}
            {app.icon === 'message' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
              </svg>
            )}
            {app.icon === 'users' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                <circle cx="9" cy="7" r="4" />
                <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                <path d="M16 3.13a4 4 0 0 1 0 7.75" />
              </svg>
            )}
            {app.icon === 'layout' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <line x1="3" y1="9" x2="21" y2="9" />
                <line x1="9" y1="21" x2="9" y2="9" />
              </svg>
            )}
            {app.icon === 'mail' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                <polyline points="22,6 12,13 2,6" />
              </svg>
            )}
            {app.icon === 'globe' && (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10" />
                <path d="M2 12h20" />
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" />
              </svg>
            )}
          </div>
          <span class="text-text-tertiary text-xs font-medium">{app.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>
