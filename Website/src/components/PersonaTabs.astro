<script>
  /* Desktop tab switching — ~250 bytes */
  document.querySelectorAll('.persona-tab').forEach(tab=>{
    tab.addEventListener('click',()=>{
      document.querySelectorAll('.persona-tab').forEach(t=>{
        t.classList.remove('text-accent-teal','border-accent-teal');
        t.classList.add('text-text-secondary','border-transparent');
        t.setAttribute('aria-selected','false');
      });
      tab.classList.add('text-accent-teal','border-accent-teal');
      tab.classList.remove('text-text-secondary','border-transparent');
      tab.setAttribute('aria-selected','true');
      document.querySelectorAll('.persona-panel').forEach(p=>{
        p.classList.add('opacity-0','hidden');
      });
      const panel=document.getElementById(tab.getAttribute('aria-controls'));
      panel.classList.remove('hidden');
      requestAnimationFrame(()=>panel.classList.remove('opacity-0'));
    });
  });
  /* Mobile accordion */
  document.querySelectorAll('.accordion-trigger').forEach(btn=>{
    btn.addEventListener('click',()=>{
      const expanded=btn.getAttribute('aria-expanded')==='true';
      const panel=document.getElementById(btn.dataset.panel);
      const icon=btn.querySelector('.accordion-icon');
      if(expanded){
        panel.classList.add('hidden');
        btn.setAttribute('aria-expanded','false');
        icon.classList.remove('rotate-180');
        icon.classList.remove('text-accent-teal');
        icon.classList.add('text-text-tertiary');
      }else{
        panel.classList.remove('hidden');
        btn.setAttribute('aria-expanded','true');
        icon.classList.add('rotate-180');
        icon.classList.add('text-accent-teal');
        icon.classList.remove('text-text-tertiary');
      }
    });
  });
</script>
