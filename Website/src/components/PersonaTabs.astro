---
/* PersonaTabs — Tabbed interface showing QuickSay in different work contexts */
import BetaCTA from './BetaCTA.astro';
---

<section id="personas" class="py-24 md:py-32">
  <div class="mx-auto max-w-6xl px-6">
    <!-- Headline -->
    <h2 class="font-headline font-semibold text-3xl md:text-4xl text-text-primary text-balance text-center mb-12 fade-in-up">
      Built for how you work.
    </h2>

    <!-- Tab bar — desktop horizontal, hidden on mobile -->
    <div class="hidden md:flex justify-center gap-2 mb-10 fade-in-up" role="tablist" aria-label="Persona tabs" id="persona-tablist">
      <button
        role="tab"
        aria-selected="true"
        aria-controls="panel-developer"
        id="tab-developer"
        class="persona-tab font-headline font-medium text-sm py-3 px-6 cursor-pointer rounded-lg transition-colors duration-150 text-accent-teal border-b-2 border-accent-teal"
      >Developer</button>
      <button
        role="tab"
        aria-selected="false"
        aria-controls="panel-writer"
        id="tab-writer"
        class="persona-tab font-headline font-medium text-sm py-3 px-6 cursor-pointer rounded-lg transition-colors duration-150 text-text-secondary border-b-2 border-transparent"
      >Writer</button>
      <button
        role="tab"
        aria-selected="false"
        aria-controls="panel-knowledge"
        id="tab-knowledge"
        class="persona-tab font-headline font-medium text-sm py-3 px-6 cursor-pointer rounded-lg transition-colors duration-150 text-text-secondary border-b-2 border-transparent"
      >Knowledge Worker</button>
      <button
        role="tab"
        aria-selected="false"
        aria-controls="panel-accessibility"
        id="tab-accessibility"
        class="persona-tab font-headline font-medium text-sm py-3 px-6 cursor-pointer rounded-lg transition-colors duration-150 text-text-secondary border-b-2 border-transparent"
      >Accessibility</button>
    </div>

    <!-- Desktop Tab Panels -->
    <div class="hidden md:block relative fade-in-up">
      <!-- Developer Panel -->
      <div role="tabpanel" id="panel-developer" aria-labelledby="tab-developer" class="persona-panel transition-opacity duration-300 opacity-100">
        <div class="bg-[#0e0e10] border border-border rounded-xl overflow-hidden" style="aspect-ratio: 16/10;">
          <!-- VS Code title bar -->
          <div class="bg-[#1e1e22] flex items-center justify-between px-3 py-2 border-b border-[rgba(255,255,255,0.06)]">
            <span class="font-mono text-[11px] text-text-tertiary">utils.py - QuickSay Project</span>
            <!-- Windows controls (right-aligned) -->
            <div class="flex items-center gap-0">
              <!-- Minimize -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[rgba(255,255,255,0.08)] transition-colors duration-75" title="Minimize">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><line x1="2" y1="8" x2="14" y2="8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" class="text-text-tertiary"/></svg>
              </button>
              <!-- Maximize -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[rgba(255,255,255,0.08)] transition-colors duration-75" title="Maximize">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><rect x="2.5" y="2.5" width="11" height="11" rx="1.5" stroke="currentColor" stroke-width="1.5" fill="none" class="text-text-tertiary"/></svg>
              </button>
              <!-- Close -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[#c42b1c] transition-colors duration-75 group" title="Close">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M3.5 3.5L12.5 12.5M12.5 3.5L3.5 12.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" class="text-text-tertiary group-hover:text-white"/></svg>
              </button>
            </div>
          </div>
          <div class="flex h-[calc(100%-68px)]">
            <!-- VS Code Activity Bar -->
            <div class="w-12 bg-[#18181b] border-r border-[rgba(255,255,255,0.05)] flex flex-col items-center py-3 gap-4 shrink-0">
              <!-- Files icon -->
              <svg class="w-5 h-5 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
              <!-- Search icon -->
              <svg class="w-5 h-5 text-text-quaternary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
              <!-- Git icon -->
              <svg class="w-5 h-5 text-text-quaternary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="18" r="3"/><circle cx="6" cy="6" r="3"/><circle cx="18" cy="6" r="3"/><path d="M12 15V9m-3.5-1.5L12 9m3.5-1.5L12 9"/></svg>
              <!-- Extensions icon -->
              <svg class="w-5 h-5 text-text-quaternary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><rect x="3" y="3" width="8" height="8" rx="1"/><rect x="13" y="3" width="8" height="8" rx="1"/><rect x="3" y="13" width="8" height="8" rx="1"/><rect x="13" y="13" width="8" height="8" rx="1"/></svg>
            </div>
            <!-- VS Code Sidebar: File Explorer -->
            <div class="w-48 bg-[#18181b] border-r border-[rgba(255,255,255,0.05)] shrink-0 overflow-hidden">
              <div class="px-3 py-2 text-[10px] font-mono uppercase tracking-wider text-text-quaternary">Explorer</div>
              <div class="px-2 space-y-0.5 text-[11px] font-mono">
                <div class="flex items-center gap-1.5 px-1 py-0.5 text-text-tertiary">
                  <span class="text-text-quaternary">&#9660;</span>
                  <span>quicksay-project</span>
                </div>
                <div class="flex items-center gap-1.5 pl-5 py-0.5 text-text-tertiary">
                  <span class="text-text-quaternary">&#9660;</span>
                  <span>src</span>
                </div>
                <div class="flex items-center gap-1.5 pl-9 py-0.5 text-text-secondary bg-[rgba(255,255,255,0.05)] rounded">
                  <span class="text-[#519aba]">&#9830;</span>
                  <span>utils.py</span>
                </div>
                <div class="flex items-center gap-1.5 pl-9 py-0.5 text-text-tertiary">
                  <span class="text-[#519aba]">&#9830;</span>
                  <span>main.py</span>
                </div>
                <div class="flex items-center gap-1.5 pl-9 py-0.5 text-text-tertiary">
                  <span class="text-[#519aba]">&#9830;</span>
                  <span>config.py</span>
                </div>
                <div class="flex items-center gap-1.5 pl-5 py-0.5 text-text-tertiary">
                  <span class="text-text-quaternary">&#9654;</span>
                  <span>tests</span>
                </div>
                <div class="flex items-center gap-1.5 pl-5 py-0.5 text-text-tertiary">
                  <span class="text-[#6d8a88]">&#9830;</span>
                  <span>README.md</span>
                </div>
              </div>
            </div>
            <!-- VS Code Editor Area -->
            <div class="flex-1 flex flex-col min-w-0">
              <!-- Tab bar -->
              <div class="flex bg-[#18181b] border-b border-[rgba(255,255,255,0.05)]">
                <div class="flex items-center gap-2 px-4 py-1.5 bg-[#0e0e10] border-r border-[rgba(255,255,255,0.05)] border-t-2 border-t-accent-teal">
                  <span class="text-[#519aba] text-[10px]">&#9830;</span>
                  <span class="font-mono text-[11px] text-text-secondary">utils.py</span>
                  <span class="text-text-quaternary text-[10px] ml-1 hover:text-text-tertiary">&times;</span>
                </div>
                <div class="flex items-center gap-2 px-4 py-1.5 border-r border-[rgba(255,255,255,0.05)]">
                  <span class="text-[#519aba] text-[10px]">&#9830;</span>
                  <span class="font-mono text-[11px] text-text-quaternary">main.py</span>
                </div>
              </div>
              <!-- Editor content: raw vs clean -->
              <div class="flex-1 p-5 overflow-hidden">
                <div class="space-y-5">
                  <!-- Raw section -->
                  <div>
                    <div class="flex items-center gap-2 mb-2.5">
                      <span class="text-[10px] font-mono text-text-tertiary uppercase tracking-wider">Raw dictation</span>
                      <span class="flex-1 h-px bg-border"></span>
                    </div>
                    <div class="flex gap-3">
                      <div class="flex flex-col items-end text-text-quaternary font-mono text-[11px] leading-[1.8] select-none shrink-0">
                        <span>14</span><span>15</span><span>16</span>
                      </div>
                      <p class="font-mono text-text-secondary text-xs leading-[1.8]">okay so uh create a function that takes a list of numbers and returns the average but make sure to handle the empty list case</p>
                    </div>
                  </div>
                  <!-- Clean section -->
                  <div>
                    <div class="flex items-center gap-2 mb-2.5">
                      <span class="text-[10px] font-mono text-accent-teal uppercase tracking-wider">QuickSay output</span>
                      <span class="flex-1 h-px bg-accent-teal/20"></span>
                    </div>
                    <div class="flex gap-3">
                      <div class="flex flex-col items-end text-text-quaternary font-mono text-[11px] leading-[1.8] select-none shrink-0">
                        <span>14</span><span>15</span>
                      </div>
                      <p class="font-body text-text-primary text-sm leading-[1.8]">Create a function that accepts a list of numbers and returns their average. Handle the empty list edge case.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- VS Code Status Bar -->
          <div class="flex items-center justify-between px-3 py-1 bg-[#007acc] text-[10px] font-mono text-white/90">
            <div class="flex items-center gap-3">
              <span>main</span>
              <span>Python 3.11</span>
            </div>
            <div class="flex items-center gap-3">
              <span class="flex items-center gap-1">
                <span class="inline-block w-2 h-2 rounded-full bg-accent-teal animate-pulse"></span>
                QuickSay: Listening
              </span>
              <span>UTF-8</span>
              <span>Ln 15, Col 1</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Writer Panel -->
      <div role="tabpanel" id="panel-writer" aria-labelledby="tab-writer" class="persona-panel transition-opacity duration-300 opacity-0 hidden">
        <div class="bg-[#0e0e10] border border-border rounded-xl overflow-hidden" style="aspect-ratio: 16/10;">
          <!-- Docs title bar -->
          <div class="bg-[#1e1e22] flex items-center justify-between px-3 py-2 border-b border-[rgba(255,255,255,0.06)]">
            <span class="font-body text-[11px] text-text-tertiary">Draft - Remote Work Analysis</span>
            <!-- Windows controls (right-aligned) -->
            <div class="flex items-center gap-0">
              <!-- Minimize -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[rgba(255,255,255,0.08)] transition-colors duration-75" title="Minimize">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><line x1="2" y1="8" x2="14" y2="8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" class="text-text-tertiary"/></svg>
              </button>
              <!-- Maximize -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[rgba(255,255,255,0.08)] transition-colors duration-75" title="Maximize">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><rect x="2.5" y="2.5" width="11" height="11" rx="1.5" stroke="currentColor" stroke-width="1.5" fill="none" class="text-text-tertiary"/></svg>
              </button>
              <!-- Close -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[#c42b1c] transition-colors duration-75 group" title="Close">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M3.5 3.5L12.5 12.5M12.5 3.5L3.5 12.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" class="text-text-tertiary group-hover:text-white"/></svg>
              </button>
            </div>
          </div>
          <div class="flex flex-col h-[calc(100%-68px)]">
            <!-- Toolbar / Ribbon -->
            <div class="flex items-center gap-1 px-4 py-2 bg-[#1a1a1e] border-b border-[rgba(255,255,255,0.05)]">
              <!-- Font selector -->
              <div class="flex items-center gap-1 px-2 py-1 rounded bg-[rgba(255,255,255,0.04)] text-[10px] font-body text-text-tertiary">
                <span>DM Sans</span>
                <span class="text-text-quaternary ml-1">&#9660;</span>
              </div>
              <div class="flex items-center gap-1 px-2 py-1 rounded bg-[rgba(255,255,255,0.04)] text-[10px] font-mono text-text-tertiary">
                <span>11</span>
                <span class="text-text-quaternary ml-0.5">&#9660;</span>
              </div>
              <span class="w-px h-4 bg-[rgba(255,255,255,0.06)] mx-1"></span>
              <!-- B I U -->
              <button class="w-7 h-7 flex items-center justify-center rounded text-[11px] font-bold text-text-tertiary hover:bg-[rgba(255,255,255,0.05)]">B</button>
              <button class="w-7 h-7 flex items-center justify-center rounded text-[11px] italic text-text-tertiary hover:bg-[rgba(255,255,255,0.05)]">I</button>
              <button class="w-7 h-7 flex items-center justify-center rounded text-[11px] underline text-text-tertiary hover:bg-[rgba(255,255,255,0.05)]">U</button>
              <span class="w-px h-4 bg-[rgba(255,255,255,0.06)] mx-1"></span>
              <!-- Alignment icons -->
              <button class="w-7 h-7 flex items-center justify-center rounded text-text-tertiary hover:bg-[rgba(255,255,255,0.05)]">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M3 6h18M3 12h12M3 18h18"/></svg>
              </button>
              <button class="w-7 h-7 flex items-center justify-center rounded text-text-tertiary hover:bg-[rgba(255,255,255,0.05)]">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M3 6h18M3 12h18M3 18h18"/></svg>
              </button>
              <span class="w-px h-4 bg-[rgba(255,255,255,0.06)] mx-1"></span>
              <!-- List buttons -->
              <button class="w-7 h-7 flex items-center justify-center rounded text-text-tertiary hover:bg-[rgba(255,255,255,0.05)]">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M8 6h13M8 12h13M8 18h13M3 6h.01M3 12h.01M3 18h.01"/></svg>
              </button>
              <button class="w-7 h-7 flex items-center justify-center rounded text-text-tertiary hover:bg-[rgba(255,255,255,0.05)]">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M12 6h9M12 12h9M12 18h9M3 6l3 3-3 3M3 18l3-3-3-3"/></svg>
              </button>
            </div>
            <!-- Ruler -->
            <div class="px-16 py-1 border-b border-[rgba(255,255,255,0.04)] bg-[#16161a]">
              <div class="flex justify-between text-[8px] font-mono text-text-quaternary">
                <span>|</span><span>1</span><span>|</span><span>2</span><span>|</span><span>3</span><span>|</span><span>4</span><span>|</span><span>5</span><span>|</span><span>6</span><span>|</span>
              </div>
            </div>
            <!-- Document area -->
            <div class="flex-1 flex justify-center overflow-hidden bg-[#111114]">
              <div class="w-full max-w-xl px-12 py-6 space-y-6">
                <!-- Document title -->
                <h3 class="font-headline text-xl text-text-primary font-semibold">Remote Work Productivity Analysis</h3>
                <div class="w-16 h-0.5 bg-accent-teal/30"></div>
                <!-- Raw section -->
                <div>
                  <div class="flex items-center gap-2 mb-2.5">
                    <span class="text-[10px] font-mono text-text-tertiary uppercase tracking-wider">Raw dictation</span>
                    <span class="flex-1 h-px bg-border"></span>
                  </div>
                  <p class="font-mono text-text-secondary text-xs leading-relaxed">the thing about remote work is that its actually you know more productive for most people but companies dont want to admit it because of control issues</p>
                </div>
                <!-- Clean section -->
                <div>
                  <div class="flex items-center gap-2 mb-2.5">
                    <span class="text-[10px] font-mono text-accent-teal uppercase tracking-wider">QuickSay output</span>
                    <span class="flex-1 h-px bg-accent-teal/20"></span>
                  </div>
                  <p class="font-body text-text-primary text-sm leading-relaxed">Remote work is more productive for most people, but many companies resist it due to concerns about oversight and control.</p>
                </div>
              </div>
            </div>
            <!-- Status bar -->
            <div class="flex items-center justify-between px-4 py-1.5 bg-[#18181b] border-t border-[rgba(255,255,255,0.05)] text-[10px] font-mono text-text-quaternary">
              <div class="flex items-center gap-3">
                <span>Page 1 of 1</span>
                <span>Words: 24</span>
              </div>
              <div class="flex items-center gap-1.5">
                <span class="inline-block w-2 h-2 rounded-full bg-accent-teal animate-pulse"></span>
                <span class="text-accent-teal/80">QuickSay active</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Knowledge Worker Panel -->
      <div role="tabpanel" id="panel-knowledge" aria-labelledby="tab-knowledge" class="persona-panel transition-opacity duration-300 opacity-0 hidden">
        <div class="bg-[#0e0e10] border border-border rounded-xl overflow-hidden" style="aspect-ratio: 16/10;">
          <!-- Slack title bar -->
          <div class="bg-[#1e1e22] flex items-center justify-between px-3 py-2 border-b border-[rgba(255,255,255,0.06)]">
            <span class="font-headline text-[11px] text-text-tertiary font-medium">Workspace - Acme Corp</span>
            <!-- Windows controls (right-aligned) -->
            <div class="flex items-center gap-0">
              <!-- Minimize -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[rgba(255,255,255,0.08)] transition-colors duration-75" title="Minimize">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><line x1="2" y1="8" x2="14" y2="8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" class="text-text-tertiary"/></svg>
              </button>
              <!-- Maximize -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[rgba(255,255,255,0.08)] transition-colors duration-75" title="Maximize">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><rect x="2.5" y="2.5" width="11" height="11" rx="1.5" stroke="currentColor" stroke-width="1.5" fill="none" class="text-text-tertiary"/></svg>
              </button>
              <!-- Close -->
              <button class="w-11 h-7 flex items-center justify-center hover:bg-[#c42b1c] transition-colors duration-75 group" title="Close">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M3.5 3.5L12.5 12.5M12.5 3.5L3.5 12.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" class="text-text-tertiary group-hover:text-white"/></svg>
              </button>
            </div>
          </div>
          <div class="flex h-[calc(100%-68px)]">
            <!-- Slack Sidebar -->
            <div class="w-52 bg-[#18181b] border-r border-[rgba(255,255,255,0.05)] flex flex-col shrink-0 overflow-hidden">
              <!-- Workspace name -->
              <div class="px-4 py-3 border-b border-[rgba(255,255,255,0.05)]">
                <div class="flex items-center gap-2">
                  <div class="w-6 h-6 rounded bg-accent-teal/20 flex items-center justify-center text-accent-teal text-[10px] font-bold">A</div>
                  <span class="font-headline text-sm text-text-primary font-medium">Acme Corp</span>
                </div>
              </div>
              <!-- Channels -->
              <div class="px-3 py-3 space-y-0.5 text-[12px] font-body">
                <div class="px-2 py-1 text-[10px] font-mono uppercase tracking-wider text-text-quaternary mb-1">Channels</div>
                <div class="flex items-center gap-2 px-2 py-1 rounded text-text-tertiary">
                  <span class="text-text-quaternary text-[11px]">#</span>
                  <span>general</span>
                </div>
                <div class="flex items-center gap-2 px-2 py-1 rounded bg-[rgba(255,255,255,0.06)] text-text-primary">
                  <span class="text-text-tertiary text-[11px]">#</span>
                  <span>quarterly-review</span>
                </div>
                <div class="flex items-center gap-2 px-2 py-1 rounded text-text-tertiary">
                  <span class="text-text-quaternary text-[11px]">#</span>
                  <span>project-updates</span>
                </div>
                <div class="flex items-center gap-2 px-2 py-1 rounded text-text-tertiary">
                  <span class="text-text-quaternary text-[11px]">#</span>
                  <span>design</span>
                </div>
                <div class="flex items-center gap-2 px-2 py-1 rounded text-text-tertiary">
                  <span class="text-text-quaternary text-[11px]">#</span>
                  <span>random</span>
                </div>
                <div class="px-2 py-1 text-[10px] font-mono uppercase tracking-wider text-text-quaternary mt-3 mb-1">Direct Messages</div>
                <div class="flex items-center gap-2 px-2 py-1 rounded text-text-tertiary">
                  <span class="w-2 h-2 rounded-full bg-[#28c840]"></span>
                  <span>Sarah K.</span>
                </div>
                <div class="flex items-center gap-2 px-2 py-1 rounded text-text-tertiary">
                  <span class="w-2 h-2 rounded-full bg-text-quaternary"></span>
                  <span>James M.</span>
                </div>
              </div>
            </div>
            <!-- Slack Main Area -->
            <div class="flex-1 flex flex-col min-w-0">
              <!-- Channel header -->
              <div class="flex items-center justify-between px-5 py-2.5 border-b border-[rgba(255,255,255,0.05)]">
                <div class="flex items-center gap-2">
                  <span class="text-text-tertiary font-body text-sm">#</span>
                  <span class="font-headline text-sm text-text-primary font-medium">quarterly-review</span>
                  <span class="text-text-quaternary text-[10px] font-mono ml-1">12 members</span>
                </div>
              </div>
              <!-- Messages area -->
              <div class="flex-1 px-5 py-4 space-y-4 overflow-hidden">
                <!-- Previous message 1 -->
                <div class="flex gap-3">
                  <div class="w-8 h-8 rounded bg-[#e88a4a]/20 flex items-center justify-center text-[#e88a4a] text-[10px] font-bold shrink-0">SK</div>
                  <div>
                    <div class="flex items-center gap-2 mb-1">
                      <span class="font-headline text-[12px] text-text-primary font-medium">Sarah K.</span>
