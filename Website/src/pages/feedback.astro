---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Feedback — Help Us Improve QuickSay"
  description="Share your QuickSay experience. Your feedback helps us build a better voice-to-text tool for Windows."
  canonicalUrl="https://quicksay.app/feedback"
>
  <Navbar slot="header" />

  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-6">
    <div class="max-w-2xl mx-auto">
      <h1 class="fade-in-up font-headline font-bold text-4xl md:text-5xl text-text-primary text-balance mb-4">
        We're listening.
      </h1>
      <p class="fade-in-up text-text-secondary text-lg leading-relaxed mb-12">
        QuickSay gets better with every piece of feedback. Whether you've been using it for five minutes or five months, your experience matters. This form takes 2-3 minutes.
      </p>

      <!-- Feedback Form -->
      <form
        id="feedback-form"
        action="https://formspree.io/f/xykdzgbn"
        method="POST"
        class="fade-in-up space-y-8"
      >
        <!-- Hidden fields for Formspree -->
        <input type="hidden" name="_subject" value="QuickSay Feedback Submission" />
        <input type="hidden" name="_gotcha" style="display:none" />

        <!-- Question 1: Overall satisfaction (required) -->
        <div>
          <label for="satisfaction" class="block font-headline font-semibold text-text-primary mb-3">
            How satisfied are you with QuickSay overall? <span class="text-accent-orange">*</span>
          </label>
          <select
            id="satisfaction"
            name="satisfaction"
            required
            class="w-full px-4 py-3 bg-surface border border-border rounded-lg text-text-primary focus:outline-none focus:ring-2 focus:ring-accent-teal transition-all"
          >
            <option value="" disabled selected>Select one...</option>
            <option value="very-satisfied">Very satisfied — it's exactly what I needed</option>
            <option value="satisfied">Satisfied — it works well for me</option>
            <option value="neutral">Neutral — it's okay</option>
            <option value="dissatisfied">Dissatisfied — has some issues</option>
            <option value="very-dissatisfied">Very dissatisfied — major problems</option>
          </select>
        </div>

        <!-- Question 2: Primary use case -->
        <div>
          <label for="use-case" class="block font-headline font-semibold text-text-primary mb-3">
            What do you primarily use QuickSay for? <span class="text-accent-orange">*</span>
          </label>
          <select
            id="use-case"
            name="use-case"
            required
            class="w-full px-4 py-3 bg-surface border border-border rounded-lg text-text-primary focus:outline-none focus:ring-2 focus:ring-accent-teal transition-all"
          >
            <option value="" disabled selected>Select one...</option>
            <option value="email">Email and communication</option>
            <option value="documentation">Documentation and writing</option>
            <option value="coding">Code comments and development</option>
            <option value="notes">Note-taking and journaling</option>
            <option value="accessibility">Accessibility (RSI, injury, disability)</option>
            <option value="productivity">General productivity boost</option>
            <option value="other">Other (please describe below)</option>
          </select>
        </div>

        <!-- Question 3: What works well (optional) -->
        <div>
          <label for="works-well" class="block font-headline font-semibold text-text-primary mb-3">
            What's working well for you?
          </label>
          <textarea
            id="works-well"
            name="works-well"
            rows="4"
            placeholder="What do you love about QuickSay? What makes you keep using it?"
            class="w-full px-4 py-3 bg-surface border border-border rounded-lg text-text-primary placeholder:text-text-tertiary focus:outline-none focus:ring-2 focus:ring-accent-teal transition-all resize-y"
          ></textarea>
        </div>

        <!-- Question 4: What needs improvement (optional) -->
        <div>
          <label for="needs-improvement" class="block font-headline font-semibold text-text-primary mb-3">
            What needs improvement?
          </label>
          <textarea
            id="needs-improvement"
            name="needs-improvement"
            rows="4"
            placeholder="What frustrates you? What would make QuickSay better?"
            class="w-full px-4 py-3 bg-surface border border-border rounded-lg text-text-primary placeholder:text-text-tertiary focus:outline-none focus:ring-2 focus:ring-accent-teal transition-all resize-y"
          ></textarea>
        </div>

        <!-- Question 5: Missing features (optional) -->
        <div>
          <label for="missing-features" class="block font-headline font-semibold text-text-primary mb-3">
            What features are you missing?
          </label>
          <textarea
            id="missing-features"
            name="missing-features"
            rows="4"
            placeholder="If QuickSay could do one more thing, what would it be?"
            class="w-full px-4 py-3 bg-surface border border-border rounded-lg text-text-primary placeholder:text-text-tertiary focus:outline-none focus:ring-2 focus:ring-accent-teal transition-all resize-y"
          ></textarea>
        </div>

        <!-- Question 6: Email (optional, for follow-up) -->
        <div>
          <label for="email" class="block font-headline font-semibold text-text-primary mb-3">
            Email (optional)
          </label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="your@email.com"
            class="w-full px-4 py-3 bg-surface border border-border rounded-lg text-text-primary placeholder:text-text-tertiary focus:outline-none focus:ring-2 focus:ring-accent-teal transition-all"
          />
          <p class="text-text-tertiary text-sm mt-2">Only if you'd like us to follow up on your feedback.</p>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button
            type="submit"
            class="w-full md:w-auto px-8 py-4 bg-accent-teal text-background font-headline font-bold rounded-lg transition-all duration-150 hover:bg-[#1ebfb3] active:scale-98 cta-glow"
          >
            Send Feedback
          </button>
          <p class="text-text-tertiary text-sm mt-3">
            Takes 2-3 minutes. All fields except satisfaction and use case are optional.
          </p>
        </div>
      </form>

      <!-- Success message (hidden by default) -->
      <div id="success-message" class="hidden mt-8 p-6 bg-accent-teal/10 border border-accent-teal/30 rounded-xl">
        <h3 class="font-headline font-semibold text-xl text-accent-teal mb-2">
          Thank you for your feedback!
        </h3>
        <p class="text-text-secondary">
          Your input helps us make QuickSay better for everyone. We read every submission.
        </p>
      </div>

      <!-- Alternative: Email option -->
      <div class="mt-12 pt-8 border-t border-border fade-in-up">
        <h3 class="font-headline font-semibold text-lg text-text-primary mb-3">
          Prefer email?
        </h3>
        <p class="text-text-secondary mb-4">
          You can also send detailed feedback, bug reports, or feature requests directly to:
        </p>
        <div class="flex items-center gap-3 bg-surface border border-border rounded-lg px-5 py-4">
          <svg class="w-5 h-5 text-accent-teal flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="font-mono text-accent-teal text-base select-all">feedback@quicksay.app</span>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<script>
  // Form submission handling with Formspree
  const form = document.getElementById('feedback-form') as HTMLFormElement;
  const successMessage = document.getElementById('success-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;

    // Update button state
    submitButton.textContent = 'Sending...';
    submitButton.disabled = true;

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        // Show success message
        form.classList.add('hidden');
        successMessage?.classList.remove('hidden');

        // Scroll to success message
        successMessage?.scrollIntoView({ behavior: 'smooth', block: 'center' });
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      // Reset button on error
      submitButton.textContent = originalText || 'Send Feedback';
      submitButton.disabled = false;

      alert('There was a problem submitting your feedback. Please try again or email us directly at feedback@quicksay.app');
    }
  });
</script>

<style>
  /* Custom focus states for better accessibility */
  select:focus,
  textarea:focus,
  input:focus {
    border-color: var(--accent-teal);
  }

  /* Smooth resize for textareas */
  textarea {
    transition: height 0.2s ease;
  }

  /* Button press effect */
  button[type="submit"]:active {
    transform: scale(0.98);
  }
</style>
