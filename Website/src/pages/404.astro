---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Page Not Found — QuickSay"
  description="This page doesn't exist. Head back to QuickSay or download the app."
>
  <Navbar slot="header" />

  <section class="flex flex-col items-center justify-center text-center px-6 pt-40 pb-32 min-h-[70vh]">
    <p class="text-accent-teal font-mono text-sm font-medium tracking-wider mb-6">404</p>
    <h1 class="font-headline font-bold text-4xl sm:text-5xl text-text-primary mb-4">
      Lost in translation.
    </h1>
    <p class="text-text-secondary text-lg max-w-md mb-10">
      This page doesn't exist — but your voice-to-text app does.
    </p>

    <div class="flex flex-col sm:flex-row items-center gap-4">
      <a
        href="/"
        class="inline-flex items-center px-6 py-3 rounded-lg bg-accent-teal text-background font-medium text-base btn-press transition-all hover:shadow-[0_0_20px_rgba(34,211,197,0.3)]"
      >
        Back to Home
      </a>
      <a
        href="/beta"
        class="inline-flex items-center px-6 py-3 text-text-secondary hover:text-accent-teal font-medium text-base transition-colors"
      >
        Join the Open Beta — Free
      </a>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
