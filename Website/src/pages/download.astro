---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import BetaCTA from '../components/BetaCTA.astro';
import Footer from '../components/Footer.astro';

const requirements = [
  { label: 'Operating System', value: 'Windows 10 or later (64-bit)' },
  { label: 'Memory', value: '4 GB RAM minimum' },
  { label: 'Disk Space', value: '~105 MB' },
  { label: 'Network', value: 'Internet connection required (for Groq transcription)' },
  { label: 'Audio Input', value: 'Any microphone (built-in or external)' },
];

const screenshotCards = [
  {
    src: '/images/Modes.png',
    alt: 'QuickSay Custom Modes panel showing Standard, Email, Code, and Casual formatting presets with Add Custom Mode option',
    caption: 'Custom AI formatting modes',
    width: 788,
    height: 695,
  },
  {
    src: '/images/Dictionary.png',
    alt: 'QuickSay custom dictionary interface with user-added technical terms, proper nouns, and pronunciation hints for accurate transcription',
    caption: 'Custom dictionary',
    width: 786,
    height: 694,
  },
  {
    src: '/images/Statistics.png',
    alt: 'QuickSay usage dashboard showing total words transcribed, time saved, daily usage charts, and accuracy metrics over time',
    caption: 'Usage statistics',
    width: 785,
    height: 696,
  },
  {
    src: '/images/Audio.png',
    alt: 'QuickSay audio settings with microphone selection, noise reduction controls, gain adjustment, and quality presets for different environments',
    caption: 'Audio presets',
    width: 785,
    height: 692,
  },
];
---

<BaseLayout
  title="Download QuickSay — Voice-to-Text for Windows"
  description="Download QuickSay for Windows. Free open beta — AI-powered voice-to-text with automatic text cleanup. No credit card required."
  canonicalUrl="https://quicksay.app/download"
>
  <Navbar slot="header" />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 md:pt-40 md:pb-20 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="fade-in-up font-headline font-bold text-4xl md:text-5xl lg:text-6xl text-text-primary text-balance">
        Download QuickSay
      </h1>
      <div class="fade-in-up mt-6">
        <p class="text-accent-orange font-headline font-bold text-3xl md:text-4xl">
          Open Beta — Free
        </p>
        <p class="text-text-secondary text-base mt-2">No credit card required. No subscription.</p>
      </div>

      <!-- CTA with glow -->
      <div class="fade-in-up relative inline-block mt-10">
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-accent-teal opacity-10 blur-3xl rounded-full pointer-events-none"
          aria-hidden="true"
        ></div>
        <BetaCTA text="Join the Open Beta — Free" size="large" class="relative" />
      </div>

      <!-- Browser warning reassurance -->
      <div class="fade-in-up max-w-xl mx-auto mt-10 bg-surface border border-border rounded-lg p-5">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-accent-teal shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2l7 4v5c0 5.25-3.5 9.74-7 11-3.5-1.26-7-5.75-7-11V6z" />
            <polyline points="9 12 11 14 15 10" />
          </svg>
          <div>
            <p class="font-headline font-semibold text-text-primary text-sm mb-1">Safe &amp; Signed</p>
            <p class="text-text-secondary text-xs leading-relaxed">
              Chrome may show a download warning because QuickSay is new software. Click the <strong class="text-text-primary">^</strong> arrow and select <strong class="text-text-primary">"Keep"</strong> to proceed. QuickSay is digitally signed with Microsoft Azure Trusted Signing.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Preview -->
  <section class="pb-20 md:pb-24 px-6">
    <div class="max-w-[1000px] mx-auto">
      <div class="fade-in-up bg-surface border border-border rounded-xl overflow-hidden shadow-lg">
        <img
          src="/images/QuickSay_Setup.png"
          alt="QuickSay Windows installer showing clean installation wizard with account setup, microphone selection, and getting started guide"
          width="2560"
          height="1600"
          class="w-full h-auto"
        />
      </div>
    </div>
  </section>

  <!-- What's Inside Section -->
  <section class="py-20 md:py-24 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="fade-in-up font-headline font-semibold text-3xl md:text-4xl text-text-primary text-balance text-center mb-12">
        What's inside
      </h2>

      <!-- 2x2 Grid of Screenshot Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        {screenshotCards.map((card, i) => (
          <div
            class="fade-in-up bg-surface border border-border rounded-xl overflow-hidden shadow-md hover:border-accent-teal/50 transition-all duration-200 card-hover"
            style={`transition-delay: ${i * 100}ms`}
          >
            <img
              src={card.src}
              alt={card.alt}
              width={card.width}
              height={card.height}
              loading="lazy"
              class="w-full h-auto"
            />
            <div class="p-4 text-center">
              <p class="font-body text-text-secondary text-sm font-medium">{card.caption}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- System Requirements -->
  <section class="py-20 md:py-24 px-6 bg-[#0e0e10]">
    <div class="max-w-2xl mx-auto">
      <h2 class="fade-in-up font-headline font-semibold text-2xl md:text-3xl text-text-primary mb-8 text-center">
        System Requirements
      </h2>
      <div class="fade-in-up border border-border rounded-xl bg-surface overflow-hidden">
        {requirements.map((req, i) => (
          <div class:list={['flex items-center justify-between p-4', i < requirements.length - 1 && 'border-b border-border']}>
            <span class="text-text-secondary text-sm font-medium">{req.label}</span>
            <span class="text-text-primary text-sm">{req.value}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Free Tier Callout -->
  <section id="free-tier" class="py-20 md:py-24 px-6">
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Left: Screenshot -->
        <div class="fade-in-up order-2 md:order-1">
          <div class="bg-surface border border-border rounded-xl overflow-hidden shadow-lg">
            <img
              src="/images/API.png"
              alt="QuickSay configuration panel showing Groq account connection, model selection dropdown, and free tier usage information"
              width="623"
              height="752"
              loading="lazy"
              class="w-full h-auto"
            />
          </div>
        </div>

        <!-- Right: Content -->
        <div class="fade-in-up order-1 md:order-2">
          <h2 class="font-headline font-bold text-3xl md:text-4xl text-text-primary text-balance mb-4">
            Free AI tier included
          </h2>
          <p class="text-text-secondary text-base leading-relaxed mb-6">
            QuickSay is free during the open beta. The ongoing transcription is also free for most users — Groq's free tier provides generous daily transcription at no extra cost, no credit card required.
          </p>
          <p class="text-text-secondary text-base leading-relaxed mb-6">
            Just create a free Groq account, paste your connection key, and you're ready to go. Need more? Upgrade to unlimited usage at Groq's affordable per-token pricing.
          </p>
          <div>
            <BetaCTA text="Join the Open Beta — Free" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feedback Request -->
  <section class="py-20 md:py-24 px-6">
    <div class="max-w-2xl mx-auto">
      <div class="fade-in-up bg-surface border border-accent-teal/20 rounded-xl p-8 md:p-10 text-center">
        <div class="inline-block p-3 bg-accent-teal/10 rounded-full mb-4">
          <svg class="w-6 h-6 text-accent-teal" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
          </svg>
        </div>
        <h2 class="font-headline font-semibold text-2xl md:text-3xl text-text-primary mb-3">
          Your feedback shapes QuickSay
        </h2>
        <p class="text-text-secondary text-base leading-relaxed mb-6">
          After using QuickSay for a few days, we'd love to hear about your experience. What's working? What needs improvement? Your input directly influences what we build next.
        </p>
        <a
          href="/feedback"
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent-teal text-background font-headline font-semibold rounded-lg transition-all duration-150 hover:bg-[#1ebfb3] active:scale-98"
        >
          <span>Share Feedback</span>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <p class="text-text-tertiary text-sm mt-4">Takes 2-3 minutes</p>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 md:py-24 px-6 bg-[#0e0e10]">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="fade-in-up font-headline font-bold text-3xl md:text-4xl text-text-primary text-balance mb-4">
        Start speaking. Stop typing.
      </h2>
      <p class="fade-in-up text-text-secondary text-base leading-relaxed mb-8">
        Free during open beta. No credit card required.
      </p>

      <!-- CTA with glow -->
      <div class="fade-in-up relative inline-block mb-6">
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-accent-teal opacity-10 blur-3xl rounded-full pointer-events-none"
          aria-hidden="true"
        ></div>
        <BetaCTA text="Join the Open Beta — Free" size="large" class="relative" />
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
