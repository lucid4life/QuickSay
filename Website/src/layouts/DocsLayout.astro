---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description: string;
  headings: { depth: number; slug: string; text: string }[];
}

const { title, description, headings } = Astro.props;

// Get all docs sorted by order for sidebar + prev/next
const allDocs = (await getCollection('docs')).sort(
  (a, b) => a.data.order - b.data.order
);

// Find current page index
const currentSlug = Astro.url.pathname.replace(/^\/docs\//, '').replace(/\/$/, '');
const currentIndex = allDocs.findIndex((doc) => doc.id === currentSlug);
const prevDoc = currentIndex > 0 ? allDocs[currentIndex - 1] : null;
const nextDoc = currentIndex < allDocs.length - 1 ? allDocs[currentIndex + 1] : null;

// Filter headings to h2 and h3 for TOC
const tocHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

<BaseLayout
  title={`${title} â€” QuickSay Docs`}
  description={description}
  canonicalUrl={`https://quicksay.app/docs/${currentSlug}`}
>
  <Navbar slot="header" />

  <div class="docs-wrapper">
    <!-- Mobile sidebar toggle -->
    <input type="checkbox" id="docs-sidebar-toggle" class="sr-only peer" />
    <label
      for="docs-sidebar-toggle"
      class="lg:hidden fixed bottom-6 left-6 z-40 flex items-center gap-2 px-4 py-2.5 rounded-lg bg-surface border border-border text-text-secondary text-sm font-medium cursor-pointer hover:text-text-primary transition-colors"
      aria-label="Toggle documentation sidebar"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
      Docs Menu
    </label>

    <!-- Sidebar overlay (mobile) -->
    <label
      for="docs-sidebar-toggle"
      class="sidebar-overlay"
      aria-hidden="true"
    ></label>

    <!-- Sidebar -->
    <aside class="docs-sidebar" id="docs-sidebar">
      <nav aria-label="Documentation pages">
        <p class="text-text-tertiary text-xs font-semibold uppercase tracking-wider mb-4 px-3">Documentation</p>
        <ul class="flex flex-col gap-0.5" role="list">
          {allDocs.map((doc) => {
            const isActive = doc.id === currentSlug;
            return (
              <li>
                <a
                  href={`/docs/${doc.id}`}
                  class:list={[
                    'sidebar-link',
                    { 'sidebar-link-active': isActive },
                  ]}
                  aria-current={isActive ? 'page' : undefined}
                >
                  {doc.data.title}
                </a>
              </li>
            );
          })}
        </ul>
      </nav>
    </aside>

    <!-- Main content area -->
    <div class="docs-content">
      <!-- Breadcrumb -->
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <ol class="flex items-center gap-1.5 text-sm">
          <li><a href="/" class="text-text-tertiary hover:text-text-secondary transition-colors">Home</a></li>
          <li class="text-text-quaternary">/</li>
          <li><a href="/docs" class="text-text-tertiary hover:text-text-secondary transition-colors">Docs</a></li>
          <li class="text-text-quaternary">/</li>
          <li class="text-text-secondary">{title}</li>
        </ol>
      </nav>

      <!-- Article -->
      <article class="docs-prose">
        <h1>{title}</h1>
        <slot />
      </article>

      <!-- Prev / Next -->
      <nav class="prev-next" aria-label="Previous and next pages">
        {prevDoc ? (
          <a href={`/docs/${prevDoc.id}`} class="prev-next-link">
            <span class="prev-next-label">Previous</span>
            <span class="prev-next-title">{prevDoc.data.title}</span>
          </a>
        ) : (
          <div />
        )}
        {nextDoc ? (
          <a href={`/docs/${nextDoc.id}`} class="prev-next-link prev-next-link-right">
            <span class="prev-next-label">Next</span>
            <span class="prev-next-title">{nextDoc.data.title}</span>
          </a>
        ) : (
          <div />
        )}
      </nav>
    </div>

    <!-- Right rail: On this page (TOC) -->
    {tocHeadings.length > 0 && (
      <aside class="docs-toc">
        <p class="text-text-tertiary text-xs font-semibold uppercase tracking-wider mb-3">On this page</p>
        <ul class="flex flex-col gap-1" role="list">
          {tocHeadings.map((h) => (
            <li>
              <a
                href={`#${h.slug}`}
                class:list={[
                  'toc-link',
                  { 'toc-link-nested': h.depth === 3 },
                ]}
              >
                {h.text}
              </a>
            </li>
          ))}
        </ul>
      </aside>
    )}
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Layout grid */
  .docs-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 90rem;
    margin: 0 auto;
    padding-top: 5rem;
    min-height: 100vh;
  }

  @media (min-width: 1024px) {
    .docs-wrapper {
      grid-template-columns: 240px 1fr;
    }
  }

  @media (min-width: 1280px) {
    .docs-wrapper {
      grid-template-columns: 240px 1fr 200px;
    }
  }

  /* Sidebar */
  .docs-sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 280px;
    height: 100dvh;
    padding: 5rem 1rem 2rem;
    background-color: var(--surface);
    border-right: 1px solid var(--border);
    overflow-y: auto;
    z-index: 30;
    transform: translateX(-100%);
    transition: transform 250ms ease;
  }

  @media (min-width: 1024px) {
    .docs-sidebar {
      position: sticky;
      top: 4rem;
      height: calc(100vh - 4rem);
      width: auto;
      transform: translateX(0);
      background-color: transparent;
    }
  }

  /* Mobile sidebar open */
  #docs-sidebar-toggle:checked ~ .docs-sidebar {
    transform: translateX(0);
  }

  /* Sidebar overlay */
  .sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 25;
  }

  #docs-sidebar-toggle:checked ~ .sidebar-overlay {
    display: block;
  }

  @media (min-width: 1024px) {
    .sidebar-overlay {
      display: none !important;
    }
  }

  /* Sidebar links */
  .sidebar-link {
    display: block;
    padding: 0.425rem 0.75rem;
    border-radius: 0.375rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 450;
    transition: color 150ms ease, background-color 150ms ease;
  }

  .sidebar-link:hover {
    color: var(--text-primary);
    background-color: rgba(255, 255, 255, 0.04);
  }

  .sidebar-link-active {
    color: var(--accent-teal);
    background-color: rgba(34, 211, 197, 0.08);
  }

  .sidebar-link-active:hover {
    color: var(--accent-teal);
  }

  /* Main content */
  .docs-content {
    max-width: 48rem;
    padding: 2rem 1.5rem 4rem;
    width: 100%;
  }

  @media (min-width: 1024px) {
    .docs-content {
      padding: 2.5rem 3rem 6rem;
    }
  }

  /* Breadcrumb */
  .breadcrumb {
    margin-bottom: 2rem;
  }

  /* Right rail TOC */
  .docs-toc {
    display: none;
  }

  @media (min-width: 1280px) {
    .docs-toc {
      display: block;
      position: sticky;
      top: 6rem;
      height: fit-content;
      max-height: calc(100vh - 8rem);
      overflow-y: auto;
      padding: 2.5rem 1rem 2rem 0;
    }
  }

  .toc-link {
    display: block;
    padding: 0.2rem 0;
    color: var(--text-tertiary);
    font-size: 0.75rem;
    line-height: 1.5;
    transition: color 150ms ease;
  }

  .toc-link:hover {
    color: var(--text-secondary);
  }

  .toc-link-nested {
    padding-left: 0.75rem;
  }

  /* Prev / Next navigation */
  .prev-next {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .prev-next-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    transition: border-color 150ms ease;
  }

  .prev-next-link:hover {
    border-color: var(--accent-teal);
  }

  .prev-next-link-right {
    text-align: right;
  }

  .prev-next-label {
    color: var(--text-tertiary);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .prev-next-title {
    color: var(--accent-teal);
    font-family: 'Outfit', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
  }

  /* Prose styles for MDX content */
  .docs-prose {
    color: var(--text-secondary);
    font-size: 1rem;
    line-height: 1.75;
  }

  .docs-prose :global(h1) {
    color: var(--text-primary);
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    font-size: 2rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .docs-prose :global(h2) {
    color: var(--text-primary);
    font-family: 'Outfit', sans-serif;
    font-weight: 600;
    font-size: 1.375rem;
    line-height: 1.3;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .docs-prose :global(h3) {
    color: var(--text-primary);
    font-family: 'Outfit', sans-serif;
    font-weight: 600;
    font-size: 1.125rem;
    line-height: 1.4;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .docs-prose :global(p) {
    margin-bottom: 1.25rem;
  }

  .docs-prose :global(a) {
    color: var(--accent-teal);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 150ms ease;
  }

  .docs-prose :global(a:hover) {
    color: #1abfb2;
  }

  .docs-prose :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .docs-prose :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875em;
    background-color: #0e0e10;
    color: var(--accent-teal);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
  }

  .docs-prose :global(pre) {
    background-color: #0e0e10 !important;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1rem 1.25rem;
    margin-bottom: 1.5rem;
    overflow-x: auto;
  }

  .docs-prose :global(pre code) {
    background-color: transparent;
    padding: 0;
    font-size: 0.8125rem;
    line-height: 1.7;
    color: var(--text-primary);
  }

  .docs-prose :global(ul),
  .docs-prose :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .docs-prose :global(ul) {
    list-style-type: disc;
  }

  .docs-prose :global(ol) {
    list-style-type: decimal;
  }

  .docs-prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .docs-prose :global(li > ul),
  .docs-prose :global(li > ol) {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .docs-prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .docs-prose :global(th) {
    color: var(--text-primary);
    font-weight: 600;
    text-align: left;
    padding: 0.625rem 0.75rem;
    border-bottom: 2px solid var(--border);
  }

  .docs-prose :global(td) {
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid var(--border);
    vertical-align: top;
  }

  .docs-prose :global(tr:last-child td) {
    border-bottom: none;
  }

  .docs-prose :global(blockquote) {
    border-left: 3px solid var(--accent-teal);
    padding-left: 1rem;
    margin-left: 0;
    margin-bottom: 1.25rem;
    color: var(--text-secondary);
    font-style: italic;
  }

  .docs-prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }

  /* Heading anchors */
  .docs-prose :global(h2[id]),
  .docs-prose :global(h3[id]) {
    scroll-margin-top: 5rem;
  }
</style>

<script>
  // Close mobile sidebar when clicking a link
  const sidebar = document.getElementById('docs-sidebar');
  const toggle = document.getElementById('docs-sidebar-toggle') as HTMLInputElement | null;
  sidebar?.querySelectorAll('a').forEach((a) =>
    a.addEventListener('click', () => {
      if (toggle) toggle.checked = false;
    })
  );
</script>
